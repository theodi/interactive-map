<!DOCTYPE html>
<meta charset="utf-8">
<style>
path {
  stroke: white;
  stroke-width: 0.25px;
  fill: grey;
}
svg {
  background: #6bb9e6;
}
</style>
<body>
<script src="js/d3.v3.min.js"></script>
<script src="js/topojson.v0.min.js"></script>
<script>
var margin = {top: 10, left: 10, bottom: 10, right: 10}
  , width = parseInt(d3.select('body').style('width'))
  , width = width - margin.left - margin.right
  , mapRatio = .5
  , height = width * mapRatio;

var projection = d3.geo.mercator()
    .scale(220)
    .translate([width / 2, height / 2 + 80 ]);

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height);

var path = d3.geo.path()
    .projection(projection);

var g = svg.append("g");

var distance = 240;

var rect = svg.append("rect")
	.attr("x", "20px")
	.attr("y", height - (distance - 0) + "px")
	.attr("width", 230)
	.attr("height", 190)
	.attr("rx", 5)
	.attr("ry", 5)
	.style("fill","gray")
	.style("stroke","black");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 25) + "px")
       .attr("r", 8)
       .style("fill", "black");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 25) + "px")
       .attr("r", 3)
       .style("fill", "white");

svg.append("text")
       .attr("dy", height - (distance - 30) + "px")
       .attr("dx", "60px")
       .attr("font-family", "sans-serif")
       .style("font-weight", "bold")
       .style("fill","black")
       .style("line","black")
       .style("font-size", "1em")
       .text("ODI Node");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 60) + "px")
       .attr("r", 8)
       .style("fill", "#black");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 60) + "px")
       .attr("r", 3)
       .style("fill", "#b13198");

svg.append("text")
       .attr("dy", height - (distance - 65) + "px")
       .attr("dx", "60px")
       .attr("font-family", "sans-serif")
       .style("font-weight", "bold")
       .style("fill","#black")
       .style("line","#black")
       .style("font-size", "1em")
       .text("ODI Training Node");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 95) + "px")
       .attr("r", 8)
       .style("fill", "#0dbc37");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 95) + "px")
       .attr("r", 3)
       .style("fill", "white");
    
svg.append("text")
       .attr("dy", height - (distance - 100) + "px")
       .attr("dx", "60px")
       .attr("font-family", "sans-serif")
       .style("font-weight", "bold")
       .style("fill","#black")
       .style("line","#black")
       .style("font-size", "1em")
       .text("Data project");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 130) + "px")
       .attr("r", 8)
       .style("fill", "#f9bc26");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 130) + "px")
       .attr("r", 3)
       .style("fill", "white");
    
svg.append("text")
       .attr("dy", height - (distance - 135) + "px")
       .attr("dx", "60px")
       .attr("font-family", "sans-serif")
       .style("font-weight", "bold")
       .style("fill","#black")
       .style("line","#black")
       .style("font-size", "1em")
       .text("Where we've trained");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 165) + "px")
       .attr("r", 8)
       .style("fill", "#ef3aab");

svg.append("circle")
       .attr("cx", "40px")
       .attr("cy", height - (distance - 165) + "px")
       .attr("r", 3)
       .style("fill", "white");
    
svg.append("text")
       .attr("dy", height - (distance - 170) + "px")
       .attr("dx", "60px")
       .attr("font-family", "sans-serif")
       .style("font-weight", "bold")
       .style("fill","#black")
       .style("line","#black")
       .style("font-size", "1em")
       .text("Where we've presented");
	

// load and display the World
d3.json("data/world-50m.json", function(error, topology) {

// load and display the cities
d3.csv("data/places.csv", function(error, data) {
    var node = g.selectAll("circle")
       .data(data)
       .enter()
       .append("g")
       .attr("class","place");
/*    node.append("rect")
        .attr("transform", function(d) { return "translate(" + projection([d.lon, d.lat]) + ")"; })
        .attr("x", "0.6em")
        .attr("y", "-0.6em")
	.attr("width", 20)
	.attr("height", 18)
	.style("visibility", function(d) { if (d.radius > 2) { return "visible"; } else {return "hidden"; }})
	.style("fill","black");
*/
    node.append("text")
       .attr("class", "place-label")
       .attr("transform", function(d) { return "translate(" + projection([d.lon, d.lat]) + ")"; })
       .attr("dy", "0.4em")
       .attr("dx", "0.5em")
       .style("fill","black")
       .style("line","black")
       .style("font-size", "1em")
	.style("visibility", function(d) { if (d.radius > 2) { return "hidden"; } else {return "hidden"; }})
       .text(function(d) { return d.place; });
    node.selectAll('rect')
	.attr("width", function(d) {return (this.parentNode.getBBox().width)+5;});

    node.append("circle")
       .attr("cx", function(d) {
               return projection([d.lon, d.lat])[0];
       })
       .attr("cy", function(d) {
               return projection([d.lon, d.lat])[1];
       })
       .attr("r", function(d) { return d.radius;})
       .style("fill", function(d) { return d.color; });
});


g.selectAll("path")
      .data(topojson.object(topology, topology.objects.countries)
          .geometries)
    .enter()
      .append("path")
      .attr("d", path)
      .style("fill","#e96421") 
});

// zoom and pan
var zoom = d3.behavior.zoom()
    .on("zoom",function() {
        g.attr("transform","translate("+ 
            d3.event.translate.join(",")+")scale("+d3.event.scale+")");
        g.selectAll("circle")
            .attr("d", path.projection(projection));
        g.selectAll("path") 
            .attr("d", path.projection(projection)); 
	g.selectAll("circle")
		.attr("r", function(d) { return d.radius / d3.event.scale;})
	g.selectAll("text") 
		.style("visibility", function(d) { if (d.radius > 2 && d3.event.scale > 1.5) { return "visible"; } else { return "hidden";}})
       		.style("font-size", function(d) { var ret = 1 / d3.event.scale; if (ret > 1) ret=1; return ret+ "em";})
       		.attr("dy", function(d) { var ret = 0.4 / d3.event.scale + (0.3/d3.event.scale); return ret + "em";})

  });

svg.call(zoom)

function resize() {
    console.log('hello');
    // adjust things when the window size changes
    width = parseInt(d3.select('body').style('width'));
    width = width - margin.left - margin.right;
    height = width * mapRatio;

    // update projection
    projection
        .translate([width / 2, height / 2 +  50])
        .scale(width);

    // resize the map container
    svg
        .style('width', width + 'px')
        .style('height', height + 'px');

    // resize the map
    // TODO
}
</script>
</body>
</html>
